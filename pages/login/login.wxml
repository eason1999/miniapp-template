<!--pages/login/login.wxml-->
<view class="login-header">
    {{appName}}
</view>
<view class="login-main">
    <view class="login-note">该小程序由 {{appName}} 开发，向其提供以下权限即可继续操作</view>
    <view class="login-li">· 获取你的公开信息（昵称、头像等）</view>
    <!-- <view class="login-li">·获取你的位置信息</view> -->
    <view class="login-btn">
        <button open-type="getUserInfo" type='primary' bindgetuserinfo="login" hidden='{{loading}}'>确认登录</button>
    </view>
</view>